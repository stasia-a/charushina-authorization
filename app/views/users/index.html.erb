<% content_for(:title) { 'All users' }%>
<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Gravatar</th>
    <th>Login</th>
    <th>Full name</th>
  </tr>

  <%= will_paginate %>

  <% @users.each do |user| %>
  <tr>
    <td><%= link_to (gravatar_for user), user %></td>
    <td><%= user.login %></td>
    <td><%= user.full_name %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
<%= will_paginate %>